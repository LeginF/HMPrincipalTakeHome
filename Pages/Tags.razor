@page "/TopicsControl/{authToken}/{tags_url}"

@code
{
    [Parameter]
    public string Tags_Url { get; set; }
    [Parameter]
    public string AuthToken { get; set; }

    public List<Tag> _Tags { get; set; }

    public class Tag
    {
        public string name { get; set; }
    }

    protected override void OnInitialized()
    {
        GetTags();
    }


    async Task GetTags()
    {
        try
        {
            using (var client = new HttpClient())
            {
                client.DefaultRequestHeaders.Authorization = new System.Net.Http.Headers.AuthenticationHeaderValue("Token", AuthToken);
                _Tags = await client.GetJsonAsync<List<Tag>>(Tags_Url);
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}

@if(_Tags != null)
{
    foreach (var tag in _Tags)
    {
        @tag.name <span>&nbsp;</span>
    }
}
